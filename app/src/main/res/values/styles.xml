<resources>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#FF4081</item>
        <item name="secondBackground">#c2c2c2</item>
        <item name="menu_labels_style_bg">@drawable/round_background_light</item>
        <item name="progress_bg">@drawable/circular_progress_bar_light</item>
    </style>

    <style name="AppThemeLight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeLight.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeLight.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppThemeDark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#a4a4a4</item>
        <item name="secondBackground">#151515</item>
        <item name="menu_labels_style_bg">@drawable/round_background_dark</item>
        <item name="progress_bg">@drawable/circular_progress_bar_dark</item>
    </style>

    <style name="AppThemeDark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:padding">5dp</item>
        <item name="android:background">?attr/menu_labels_style_bg</item>
    </style>

</resources>
